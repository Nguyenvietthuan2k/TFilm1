<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Otp.ForgotPasswordActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@drawable/messagepos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textStyle="normal"
        android:textSize="18sp"
        android:text="Forgot your password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Enter your registered email below to receive "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="password reset instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_gravity="center">
        <EditText
            android:textColor="@color/black"
            android:background="@color/white"
            android:id="@+id/enter_reset_password"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/reset_forgot_password"
        android:layout_marginTop="40dp"
        android:text="Send"
        android:background="@drawable/custom_edt_sign_in"
        android:layout_gravity="center"
        android:layout_width="360dp"
        android:layout_height="60dp"/>
    <TextView
        android:textColor="@color/black"
        android:textSize="15sp"
        android:padding="3dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:text="Back to login"
        android:id="@+id/back_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

</LinearLayout>